<body>
    <div class="mx-auto" style="width: 400px;">
    <div class="main">
       

        <div class="blog">
           <div class="blog-head">
                <div>
                  <h3> <%= @genre.name %>一覧(全<%= @items.count %>件)</h3>
                </div>
  
                
            </div>
            
            <hr class="hr2">
            </hr>
            
            <div class="blog-body">
                <div class="blog-body-head">
                    
                    
                </div>
                
               <div class="container">
                   <% @items.each do |item| %>
                   <div class="itme"> 
                        <table border="1">
                            <tr>
                                <th colspan="2">
                                     <p class="post-date"><%= item.created_at.strftime('%Y/%m/%d') %></p>
                                <h2><%= item.title %></h2></th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                      <%= attachment_image_tag item, :image %>
                                </td>
                            </tr>
                            <tr>
                                <th>地域</th>
                                <td><%= item.genre.name %><%= item.place %></td>
                            </tr>
                             <tr>
                                <th>お店名</th>
                                <td><%= item.shop_name %></td>
                            </tr>  
                             <tr>
                                <th>商品名</th>
                                <td><%= item.commodity %></td>
                            </tr>  
                             <tr>
                                <th>値段</th>
                                <td><%= item.price %>円</td>
                            </tr>  
                            <tr>
                                <td colspan="2"><%= item.body %></td>
                            </tr>
                            <tr>
                                <td colspan="2">コメント件数：<%= item.comments.count %>件</td>
                            </tr>
                        </table>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
