<body>
    
    <div class="main">
        <div class="sidebar">
          <table border="1">
             <tr>
                  <th>プロフィール画像</th>
                  <td><%= attachment_image_tag @user, :image, :fill, 120, 150 %></td>
             </tr>
             <tr>
                   <th>名前</th>
                   <td><%= @user.name %></td>
             </tr>
             <tr>
                  <th>自己紹介</th>
                  <td><%= @user.body %></td>
              </tr>
              <tr>
                  <th>私のイチオシのお店</th>
                  <td><%= @user.like %></td>
                </tr>
            </table>
            
            <p><%= link_to "コメントした投稿",  comments_user_customer_path(@user) %></p>
            
        </div>
       
        
       
       <div class="blog">
            <div class="blog-head">
                
             
  　　　　　　
              <div class ="bottan">
                  <%= link_to "記事を書く", new_user_item_path %>
              </div>
            </div>
            
            <div class="blog-body">
                <div class="blog-body-head">
                    <p>全<%= @favorite_items.count %>件</p>
                </div>
                
                <hr class="hr2">
            　　</hr>
                
                <div class="itme-box">
                    いいね一覧
                    <% @favorite_items.each do |item|%>
                    <div class="itme">
                        <table border="1">
                            <tr>
                                <div class="item-title">
                                   <h2><%= item.title %></h2>
                                </div>
                            </tr>
                            <tr>
                                <div class ="item-image">
                                   <%= link_to user_item_path(item.id) do %>
                                      <%= attachment_image_tag item, :image %>
                                   <% end %>
                                </div>
                            </tr>
                            <tr>
                               <div calss="item-name">
                                   <%= item.shop_name %>
                                   <%= item.genre.name %>
                                   <%= item.place %>
                                   <%= item.commodity %>
                                   <%= item.price %>円
                               </div>
                            </tr>
                            <tr>
                                <div calss="item-body">
                                   <%= item.body %>
                                </div>
                                <div>
                                     <p>コメント件数：<%= item.comments.count %></p>
                                </div>
                            </tr>
                        </table>       
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>
