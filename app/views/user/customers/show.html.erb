<body>
    <div class="main">
       <div class="sidebar">
            <div>
                <table border="1">
                    <tr>
                      <th>プロフィール画像</th>
                      <td><%= attachment_image_tag @user, :image, :fill, 100, 100 %></td>
                    </tr>
                    <tr>
                       <th>名前</th>
                       <td><%= @user.name %></td>
                    </tr>
                    <tr>
                       <th>自己紹介</th>
                       <td><%= @user.body %></td>
                    </tr>
                    <tr>
                      <th>私のイチオシのお店</th>
                      <td><%= @user.like %></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="blog">
            <div class="blog-head">
                
            </blog-head>
            <blog-body>
               <div class="itme-box">
                   <% @items.each do |item|%>
                   <div class="itme">
                      <div class="image-title">
                          <%= item.title %>
                      </div> 
                      <div class="item-image">
                         <%= link_to user_item_path(item.id) do %>
                         <%= attachment_image_tag item, :image, :fill, 100, 100 %>
                         <% end %>
                      </div>
                      <div class="item-name">
                         <%= item.shop_name %>
                         <%= item.place %>
                         <%= item.commodity %>
                         <%= item.price %>円
                      </div>
                      <div class="itme-body">
                         <%= item.body %>
                      </div>
                       
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>