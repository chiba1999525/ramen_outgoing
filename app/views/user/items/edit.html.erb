  <div class="mx-auto" style="width: 400px;">
  <h2>投稿内容変更</h2>
  
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <% @item.errors.full_messages.each do |message| %>
         <%= message %>
       <% end %>
     <% end %>
　
　<%= form_with model: @item,  url: user_item_path, local: true do |f| %>
  <div class="field">
    <%= f.label :テーマ %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
  </div>
  
   <div>
   <%= attachment_image_tag @item, :image %>
   <label for="inputImage">ファイルを選択</label>
    <%= f.attachment_field :image, placeholder: "選択されていません" %>
   </div>      
  
 
   <div class="field">
    <%= f.label :店名 %><br />
    <%= f.text_field :shop_name, autofocus: true, autocomplete: "shop_name" %>
  </div>
  
  <div class="field">
    <%= f.label :商品名 %><br />
    <%= f.text_field :commodity, autofocus: true, autocomplete: "commodity" %>
  </div>
  
   <div class="field">
    <%= f.label :感想 %><br />
    <%= f.text_area :body, autofocus: true, autocomplete: "body" %>
  </div>
  
  
   <div>
     <%= f.label :地域 %><br />
     <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => true  %>
  </div>
  
  
   <div class="field">
    <%= f.label :場所 %><br />
    <%= f.text_field :place, autofocus: true, autocomplete: "place" %>
  </div>
  
   <div class="field">
    <%= f.label :値段 %><br />
    <%= f.number_field :price, autofocus: true, autocomplete: "price" %>円
  </div>
  
   <p>
   <div class="actions">
     <%= f.submit "投稿内容変更", class: "btn btn-success"  %>
   </div>
   </p>
  <% end %>
  
  <p><%= link_to "記事を削除", user_item_path(@item.id), method: :delete, class: "btn btn-danger"  %></p>
  </div>