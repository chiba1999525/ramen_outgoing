<body>
    
    <div class="main">
        <div class="sidebar">
          <table border="1">
             <tr>
                  <th>プロフィール<br />
                   画像</th>
                  <td><%= attachment_image_tag @user, :image, :fill, 120, 150 %></td>
             </tr>
             <tr>
                   <th>名前</th>
                   <td><%= @user.name %></td>
             </tr>
             <tr>
                  <th>自己紹介</th>
                  <td><%= @user.body %></td>
              </tr>
              <tr>
                  <th>私のイチオシのお店</th>
                  <td><%= @user.like %></td>
                </tr>
            </table>
            
            <p><%= link_to "お気に入りした投稿",  favorites_user_customer_path(@user) %></p>
            
            <p><%= link_to "コメントした投稿",  comments_user_customer_path(@user) %></p>
       </div>
       
       <hr class="hr1">
       </hr>
       
       <div class="blog">
            <div class="blog-head">
            
              <% @genres.each do |genre| %>
              <div>
                  <%= link_to user_genre_path(genre) do %>
             　　     <%= genre.name%> 
             　 　<% end %> 
              </div>
  　　　　　　　　　<% end %>
  　　　　    
  　　　     　    <div class="search_form">
                   <%= form_with url: search_user_items_path, local: true, method: :get do |f| %>
                      <%= f.text_field :word %>
                    　<%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
                      <%= f.submit "検索", class: "btn btn-primary" %>
                    <% end %>
                </div>
                  　　　    
              <div class ="bottan">
                  <%= link_to "記事を書く", new_user_item_path %>
              </div>
              
            </div>
            
            <hr class="hr2">
            </hr>
            
            <div class="blog-body">
                <div class="blog-body-head">
                    <p>全<%= @items_all.count %>件</p>
                </div>
                <div class="itme-box">
                    <% @items_all.each do |item| %>
                    <div class="itme">
                        <table border="1">
                            <tr>
                                <th colspan="2">
                                    <div class="table-title">
                                        <h2><%= item.title %></h2>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                   <div class="table-image">
                                       <%= link_to user_item_path(item.id) do %>
                                          <%= attachment_image_tag item, :image %>
                                       <% end %>
                                   </div>
                                </td>
                            </tr>
                            <tr>
                                <th>地域</th>
                                <td><%= item.genre.name %><%= item.place %></td>
                            </tr>
                             <tr>
                                <th>お店名</th>
                                <td><%= item.shop_name %></td>
                            </tr>  
                             <tr>
                                <th>商品名</th>
                                <td><%= item.commodity %></td>
                            </tr>  
                             <tr>
                                <th>値段</th>
                                <td><%= item.price %>円</td>
                            </tr>  
                            <tr>
                                <td colspan="2"><%= item.body %></td>
                            </tr>
                            <tr>
                                <td colspan="2">コメント件数：<%= item.comments.count %>件</td>
                            </tr>
                        </table>       
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>
