<body>
    
    <div class="main">
        <div class="sidebar">
            <div class="table">
                <table border="1">
                    <tr>
                      <th>プロフィール<br />
                           画像</th>
                        <td><%= attachment_image_tag @user, :image, :fill, 120, 150,format: 'jpeg', fallback: "no_image.jpg" %></td>
                    </tr>
                    <tr>
                        <th>名前</th>
                        <td><%= @user.name %></td>
                    </tr>
                    <tr>
                       <th>自己紹介</th>
                       <td><%= @user.body %></td>
                    </tr>
                    <tr>
                       <th>私のイチオシのお店</th>
                       <td><%= @user.like %></td>
                    </tr>
                </table>
            </div>
            
            <p><%= link_to "私のお気に入りした投稿",  favorites_user_customer_path(@user), class: "btn btn-secondary" %></p>
            
            <p><%= link_to "私のコメントした投稿",  comments_user_customer_path(@user), class: "btn btn-secondary" %></p>
       </div>
       
       <hr class="hr1">
       </hr>
       
       <div class="blog">
            <div class="blog-head">
  　　　　    
              <p><h3>投稿一覧(全<%= @items_all.count %>件)</h3></p>
                  　　　    
              <div class ="bottan">
                  <%= link_to "記事を書く", new_user_item_path, class: "btn btn-info" %>
              </div>
              
                  <div class="search_form">
                   <%= form_with model: @genres, url: user_genre_path(@genres.ids), local: true, method: :get do |f| %>
                      <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "地域を選択"  %>
                      <%= f.submit "検索", class: "btn btn-primary" %>
                    <% end %>
                </div>
              
            </div>
            
            <hr class="hr2">
            </hr>
            
            <div class="blog-body">
                <div class="blog-body-head">
                    
                　
                </div>    
                
                <div class="itme-box">
                    <% @items_all.each do |item| %>
                    <div class="itme">
                        <table border="1">
                            <tr>
                                <th colspan="2">
                                    <div class="table-title">
                                        <h2><%= item.title %></h2>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                   <div class="table-image">
                                       <%= link_to user_item_path(item.id) do %>
                                          <%= attachment_image_tag item, :image %>
                                       <% end %>
                                   </div>
                                </td>
                            </tr>
                            <tr>
                                <th>地域</th>
                                <td><%= item.genre.name %><%= item.place %></td>
                            </tr>
                             <tr>
                                <th>お店名</th>
                                <td><%= item.shop_name %></td>
                            </tr>  
                             <tr>
                                <th>商品名</th>
                                <td><%= item.commodity %></td>
                            </tr>  
                             <tr>
                                <th>値段</th>
                                <td><%= item.price %>円</td>
                            </tr>  
                            <tr>
                                <td colspan="2"><%= item.body %></td>
                            </tr>
                            <tr>
                                <td colspan="2">コメント件数：<%= item.comments.count %>件</td>
                            </tr>
                        </table>       
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>
