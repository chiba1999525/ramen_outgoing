<body>
    <div class="main">
        <div class="sidebar">
         
       </div class="sidebar">
       <div class="blog">
            <div class="blog-head">
                
                <p><h3>投稿一覧(全<%= @items.count %>件)</h3></p>
                  　　　    
              <div class ="bottan">
                  <%= link_to "記事を書く", new_user_item_path %>
              </div>
              
                  <div class="search_form">
                   <%= form_with url: search_admin_items_path, local: true, method: :get do |f| %>
                      <%= f.text_field :word %>
                      <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "地域を選択"  %>
                      <%= f.submit "検索", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
            
              <hr class="hr2">
              </hr>
            
            <div class="blog-body">
                <div class="itme-box">
                  <% @items.each do |item| %>
                  <div class="itme">
                      <table border="1">
                            <tr>
                                <th colspan="2">
                                    <div class="table-title">
                                        <h2><%= item.title %></h2>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                   <div class="table-image">
                                       <%= link_to admin_item_path(item.id) do %>
                                          <%= attachment_image_tag item, :image %>
                                       <% end %>
                                   </div>
                                </td>
                            </tr>
                            <tr>
                                <th>地域</th>
                                <td><%= item.genre.name %><%= item.place %></td>
                            </tr>
                             <tr>
                                <th>お店名</th>
                                <td><%= item.shop_name %></td>
                            </tr>  
                             <tr>
                                <th>商品名</th>
                                <td><%= item.commodity %></td>
                            </tr>  
                             <tr>
                                <th>値段</th>
                                <td><%= item.price %>円</td>
                            </tr>  
                            <tr>
                                <td colspan="2"><%= item.body %></td>
                            </tr>
                            <tr>
                                <td colspan="2">コメント件数：<%= item.comments.count %>件</td>
                            </tr>
                        </table> 
                   </div>
                   <% end %>
                </div>
            </div>
        </div>
    </div>
</body>
