<body>
    <div class="main">
        <div class="sidebar">
            <div>
                  <h3>投稿者プロフィール</h3>
                <table border="1">
                   <tr>
                       <th>プロフィール画像</th>
                       <td><%= attachment_image_tag @user, :image, :fill, 120, 150 %></td>
                    </tr>
                    <tr>
                       <th>名前</th> 
                       <td><%= @user.name %></td>
                    </tr>
                    <tr>
                       <th>自己紹介</th>
                       <td><%= @user.body %></td>
                    </tr>
                    <tr>
                       <th>私のイチオシのお店</th>
                      <td><%= @user.like %></td>
                    </tr>
                </table>
            </div>
        </div>
        <div calss="blog">
            <div class="blog-head">
                     <h3>投稿詳細</h3>
            </div>
            
             <hr class="hr2">
            
            <div class="blog-body">
                <div class="itme-box">
                    <div class="itme">
                       <table border="1">
                            <tr>
                                <th colspan="2">
                                    <div class="table-title">
                                        <h2><%= @item.title %></h2>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <div class="table-image">
                                       <%= link_to admin_item_path(@item.id) do %>
                                          <%= attachment_image_tag @item, :image  %>
                                       <% end %>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>地域</th>
                                <td><%= @item.genre.name %><%= @item.place %></td>
                            </tr>
                             <tr>
                                <th>お店名</th>
                                <td><%= @item.shop_name %></td>
                            </tr>  
                             <tr>
                                <th>商品名</th>
                                <td><%= @item.commodity %></td>
                            </tr>  
                             <tr>
                                <th>値段</th>
                                <td><%= @item.price %>円</td>
                            </tr>  
                            <tr>
                                <td colspan="2"><%= @item.body %></td>
                            </tr>
                            <tr>
                                <td colspan="2">コメント件数：<%= @item.comments.count %>件</td>
                            </tr>
                        </table> 
                        
                       <p><%= link_to "投稿削除", admin_item_path(@item.id), method: :delete,  class: "btn btn-danger" %></p>
                       
                       <p>コメント件数：<%= @item.comments.count %></p>
                       <% @item.comments.each do |comment| %>
                        <table border="1">
                           <thead>
                               <td><%= comment.user.name %><%= comment.created_at.strftime('%Y/%m/%d') %></td>
                           </thead>
                           <tbody>
                               <td>
                                   <%= simple_format(comment.name) %>
                                 
                                   <p> <%= link_to "コメント削除",  admin_item_comment_path(comment.item,comment), method: :delete, class: "btn btn-danger" %></p>
                                    
                               </td>
                           </tbody>
                       </table>
                       <% end %>
                       
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
