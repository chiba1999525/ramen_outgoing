<body>
    <div class="main">
        <div class="sidebar">
            <div>
                <table>
                   <tr>
                       <th>プロフィール画像</th>
                       <td><%= attachment_image_tag @user, :image, :fill, 100, 100 %></td>
                    </tr>
                    <tr>
                       <th>名前</th> 
                       <td><%= @user.name %></td>
                    </tr>
                    <tr>
                       <th>自己紹介</th>
                       <td><%= @user.body %></td>
                    </tr>
                    <tr>
                       <th>私のイチオシのお店</th>
                      <td><%= @user.like %></td>
                    </tr>
                </table>
            </div>
        </div>
        <div calss="blog">
            <div class="blog-head">
                <div class ="bottan">
                   <%= link_to "記事を書く", new_user_item_path %>
                </div>
            </div>
            <div class="blog-body">
                <div class="itme-box">
                    <div class="itme">
                       <table border="1">
                            <tr>
                                <th colspan="2">
                                    <div class="table-title">
                                        <h2><%= @item.title %></h2>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <div class="table-image">
                                       <%= link_to user_item_path(@item.id) do %>
                                          <%= attachment_image_tag @item, :image  %>
                                       <% end %>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>地域</th>
                                <td><%= @item.genre.name %><%= @item.place %></td>
                            </tr>
                             <tr>
                                <th>お店名</th>
                                <td><%= @item.shop_name %></td>
                            </tr>  
                             <tr>
                                <th>商品名</th>
                                <td><%= @item.commodity %></td>
                            </tr>  
                             <tr>
                                <th>値段</th>
                                <td><%= @item.price %>円</td>
                            </tr>  
                            <tr>
                                <td colspan="2"><%= @item.body %></td>
                            </tr>
                            <tr>
                                <td colspan="2">コメント件数：<%= @item.comments.count %>件</td>
                            </tr>
                        </table> 
                        
                       <p><% if @item.user == current_user %>
                       <%= link_to "投稿内容変更", edit_user_item_path(@item.id) %>
                       <% end %></p>
                       <p>コメント件数：<%= @item.comments.count %></p>
                       <% @item.comments.each do |comment| %>
                       <p>
                       　<%= comment.user.name %>
                      　 <%= comment.created_at.strftime('%Y/%m/%d') %>
                      　 <div>
                      　     <%= simple_format(comment.name) %>
                      　 </div>
                       </p>
                         <div>
                            <%= link_to "削除", user_item_comment_path(comment.item,comment), method: :delete %>
                         </div>
                         <% end %>
                       
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
