<body>
    <div class="main">
       <div class="sidebar">
            <div>
               
             　 <table border="1">
                    <tr>
                      <th>プロフィール<br />
                           画像</th>
                        <td><%= attachment_image_tag @user, :image, :fill, 120, 150,format: 'jpeg', fallback: "no_image.jpg" %></td>
                    </tr>
                    <tr>
                        <th>名前</th>
                        <td>管理者様</td>
                  
                </table>
            </div>
        </div>

        <div class="blog">
            <div class="blog-head">
                <h3>会員一覧</h3>
            </div>
            
            <hr class="hr2">
            
            <div class="blog-body">
               <div class="itme-box">
                    <div class="itme">
                        <table border="1">
                            <thead>
                              <th>ユーザー画像</th>
                              <th>名前</th>
                              <th>自己紹介</th>
                              <th>イチオシのお店</th>
                              <th></th>
                              <th></th>
                           </thead>
                            <% @users.each do |user|%>
                            <tbody>
                               <td><%= attachment_image_tag user, :image, :fill, 100, 100,format: 'jpeg', fallback: "no_image"  %></td>
                               <td><%= user.name %></td>
                               <td><%= user.body %></td>
                               <td><%= user.like %></td>
                               <td><% if user.is_delete == false %>
                                       有効
                                    <% else %>
                                       退会
                                    <% end %>
                               </td>
                               <td><%= link_to "詳しく見る", admin_customer_path(user.id),  class: "btn btn-warning" %></td>
                            </tbody>
                           <% end %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>