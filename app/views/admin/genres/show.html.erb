<body>
    <div class="main">
        <div class="sidebar">
            <div>
                
           </div>
        </div>

        <div class="blog">
           <div class="blog-head">
                <div>
                   <%= @genre.name %>一覧
                </div>
            </div>
            <div class="blog-body">
               <div class="itme-box">
                   <% @items.each do |item| %>
                   <div class="itme"> 
                        <%= item.title %>
                        <%= link_to user_item_path(item.id) do %>
                        <%= attachment_image_tag item, :image, :fill, 100, 100 %>
                        <% end %>
                        <%= item.shop_name %>
                        <%= item.place %>
                        <%= item.commodity %>
                        <%= item.genre.name%>
                        <%= item.price %>
                        <%= item.body %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>